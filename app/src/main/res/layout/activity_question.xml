<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Question">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alignmentMode="alignMargins"
            android:columnCount="1"
            android:columnOrderPreserved="false"
            android:elevation="10dp"
            android:rowCount="5"
            android:rowOrderPreserved="false"
            tools:ignore="UselessParent">

            <fragment
                android:id="@+id/fragment3"
                android:name="com.example.kiit.quizzy.Q1"
                android:layout_width="wrap_content"
                android:layout_height="217dp"
                android:layout_marginStart="25dp"
                tools:layout="@layout/activity_q1" />

            <fragment
                android:id="@+id/fragment4"
                android:name="com.example.kiit.quizzy.Q2"
                android:layout_width="wrap_content"
                android:layout_height="248dp"
                android:layout_marginStart="25dp"
                tools:layout="@layout/activity_q2" />

            <fragment
                android:id="@+id/fragment5"
                android:name="com.example.kiit.quizzy.Q3"
                android:layout_width="wrap_content"
                android:layout_height="219dp"
                android:layout_marginStart="25dp"
                tools:layout="@layout/activity_q3" />

            <fragment
                android:id="@+id/fragment6"
                android:name="com.example.kiit.quizzy.Q4"
                android:layout_width="wrap_content"
                android:layout_height="267dp"
                android:layout_marginStart="25dp"
                tools:layout="@layout/activity_q4" />

            <fragment
                android:id="@+id/fragment7"
                android:name="com.example.kiit.quizzy.Q5"
                android:layout_width="wrap_content"
                android:layout_height="216dp"
                android:layout_marginStart="25dp"
                tools:layout="@layout/activity_q5" />
        </GridLayout>

        <Button
            android:id="@+id/submit"
            android:layout_width="133dp"
            android:layout_height="60dp"
            android:layout_marginStart="115dp"
            android:background="@drawable/background"
            android:fontFamily="serif-monospace"
            android:text="SUBMIT"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>