<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity2"
    android:background="@drawable/nav7"
    tools:ignore="InvalidId">


    <TextView
        android:id="@+id/text1"
        android:layout_width="346dp"
        android:layout_height="550dp"
        android:layout_centerInParent="true"
        android:background="@drawable/instruct"
        android:ems="10"
        android:padding="25dp"
        android:text="1. This quiz consists of 5 multiple-choice questions.\n2. Select an answer for every question. Unanswered questions will be scored as incorrect.\n3. Click on the Submit button at the bottom of the page to have your answers graded.\n4. You will be shown your results in the end.\n5. If you want to try to get a better score, click the Retry button at the bottom of the results page. You can try the quiz as many times as you like."
        android:textColor="@android:color/black"
        android:textSize="23sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/play"
        android:layout_width="174dp"
        android:layout_height="55sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="31sp"
        android:background="@drawable/button_new"
        android:fontFamily="sans-serif"
        android:text="Play"
        android:textAllCaps="false"
        android:textColor="#0B0B61"
        android:textSize="39sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="monospace"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/instruction"
        android:textColor="#FF0040"
        android:textSize="25sp"
        android:textStyle="bold" />
</RelativeLayout>